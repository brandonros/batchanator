{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Batchanator;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Batchanator": {
    "ChunkSize": 1000,
    "MaxAttempts": 5,
    "LockTimeoutMinutes": 5,
    "PollingIntervalSeconds": 5,
    "ProcessingBatchSize": 50,
    "ApiBaseUrl": "http://localhost:5000",
    "DatabaseProvider": "SqlServer",
    "ScheduledIngestionJobs": [
      { "JobType": "email-notification", "CronExpression": "0 * * * *" },
      { "JobType": "data-sync", "CronExpression": "0 * * * *" },
      { "JobType": "report-generation", "CronExpression": "0 * * * *" }
    ],
    "Maintenance": {
      "StaleJobCleanup": "*/5 * * * *",
      "DeadLetterRetry": "0 * * * *",
      "ExpiredLockRelease": "*/2 * * * *"
    }
  }
}
